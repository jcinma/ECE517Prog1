<!DOCTYPE html>
<head>
	<title>Library Book Search</title>
</head>
<body>
	<br />
	<br />
	<%= form_tag(books_path, :method => "get", class: "navbar-form", id: "search_form") do %>
		<div class="input-append">
			<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Books" %>
			<button class="btn" type="submit"><i class="icon-search"></i></button>
		</div>
	<% end %>
	<%= yield %>

	<br />
	<br />

	<% @books.each do |book| %>
	<div class="article">
		<%= link_to book.title, book %>
	</div>
	<% end %>
</body>