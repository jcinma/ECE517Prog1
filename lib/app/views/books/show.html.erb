<p>
  <strong>Isbn:</strong>
  <%= @book.ISBN %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>
<h3>Checked Out History</h3>

<table>
  <thead>
    <tr>
	<th>User ID</th>
      <th>User Name</th>
	  <th>User Email</th>
       <th>Status</th>
	   <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% checkouts = Checkout.where(book_id: @book.id) %> 
    <% checkouts.each do |book| %>
	<% user = User.find(book.user_id) %>
      <tr>
		<td><%= user.id %></td>
        <td><%= user.first_name %></td>
		<td><%= user.email %></td>
        <td><%= book.status %></td>
        <td><%= book.created_at %></td>
       
       
        
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <strong>Status:</strong>
  <%= @book.status %>
</p>

<p>
  <strong>User:</strong>
  <%= @book.user %>
</p>
<p>

</p>

