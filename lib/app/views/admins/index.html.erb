<p id="notice"><%= notice %></p>

<h1>Listing Admins</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.email %></td>
        
        <td><%= admin.first_name %></td>
        <td><%= admin.last_name %></td>
        <td><%= link_to 'Show', admin %></td>
        
        <td><%= link_to 'Delete Admin', admin, :method => :delete, :confirm => "are u sure?"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

