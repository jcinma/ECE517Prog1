<h3>Checked Out Books</h3>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% books = Checkout.joins('LEFT OUTER JOIN books ON books.id=checkouts.book_id') %> 
    <% books.each do |book| %>
      <tr>
        <td><%= book.book_id %></td>
        <td><%= book.status %></td>
        <td><%= book.created_at %></td>
        <% @checkout = Checkout.new %>
		<td>
		<% if(book.status =="Checkout") %>
		<%= form_for(@checkout) do |f| %>
		<% if @checkout.errors.any? %>
        <h2><%= pluralize(@checkout.errors.count, "error") %> prohibited this checkout from being saved:</h2>
		<ul>
		<% @checkout.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  
  <% end %>
    <div>
    <br>
    <%= f.hidden_field :book_id, :value =>book.book_id %>
	 <%= f.hidden_field :status, :value =>"Return" %>

  </div>

  <div class="actions">
    <%= f.submit "Return"%>
  <% end %>
<% end %> </td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
